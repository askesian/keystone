.field.type-html
	label.field-label= field.label
	.field-ui(class='width-' + field.width)
		if field.noedit
			textarea(name=field.path, class=field.wysiwyg ? 'wysiwyg-noedit' : 'code', style='height: #{field.height}px')= item[field.path]
		else
			textarea(name=field.path, class=field.wysiwyg ? 'wysiwyg' : 'code', style='height: #{field.height}px')= item[field.path]
		if field.note
			.field-note!= field.note
